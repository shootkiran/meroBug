{
    "name": "shootkiran/merobug",
    "description": "Save Exceptions of Laravel into Database.Inspired by larabug",
    "keywords": [
        "laravel",
        "log",
        "error"
    ],
    "require": {
        "php": "^8.3",
        "guzzlehttp/guzzle": "^7.9",
        "illuminate/support": "^12.8",
        "monolog/monolog": "^3.9"
    },
    "autoload": {
        "psr-4": {
            "MeroBug\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MeroBug\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix"
    },
    "extra": {
        "laravel": {
            "providers": [
                "MeroBug\\ServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "license": "MIT",
    "authors": [
        {
            "name": "Kiran Shrestha",
            "email": "shootkiran@gmail.com",
            "homepage": "http://www.facebook.com",
            "role": "Owner"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^12.1"
    }
}
